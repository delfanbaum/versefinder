{
  "name": "Verse Finder",
  "version": "1.0",
  "description": "Find and make poetry on the web! Developed as a part of a research project generously funded by the MFA Program at UMass Boston. ",
  "permissions": [ "activeTab", "declarativeContent", "storage" ],
  "page_action": {
     "default_popup": "tester.html",
     "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
   },
  "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
  "manifest_version": 2
}
